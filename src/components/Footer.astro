<style>
	footer {
		background: linear-gradient(180deg, rgb(var(--gray-dark)) 0%, #1a1f23 100%);
		color: rgba(255, 255, 255, 0.75);
	}

	.footer-top {
		padding: 4rem 1.5rem 3rem;
	}

	.footer-content {
		max-width: 1100px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: 1fr;
		gap: 3rem;
	}

	@media (min-width: 768px) {
		.footer-content {
			grid-template-columns: 1.5fr 1fr 1.2fr;
			gap: 4rem;
		}
	}

	.footer-logo {
		display: flex;
		align-items: center;
		gap: 0.6rem;
		margin-bottom: 1rem;
	}

	.logo-icon {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 36px;
		height: 36px;
		background: rgba(5, 150, 105, 0.15);
		border-radius: var(--border-radius-sm);
		color: var(--accent-light);
	}

	.brand-name {
		font-weight: 700;
		color: white;
		font-size: 1.05rem;
		letter-spacing: -0.01em;
	}

	.brand-tagline {
		font-size: 0.9rem;
		line-height: 1.6;
		margin-bottom: 1.5rem;
		max-width: 280px;
	}

	.social-links {
		display: flex;
		gap: 0.5rem;
	}

	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		background: rgba(255, 255, 255, 0.05);
		border-radius: var(--border-radius-sm);
		color: rgba(255, 255, 255, 0.7);
		transition: all var(--transition-fast);
	}

	.social-links a:hover {
		background: rgba(5, 150, 105, 0.2);
		color: var(--accent-light);
	}

	.footer-nav h4,
	.footer-cta h4 {
		color: white;
		font-size: 0.85rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		margin-bottom: 1.25rem;
	}

	.footer-links {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.footer-links a {
		color: rgba(255, 255, 255, 0.7);
		text-decoration: none;
		font-size: 0.95rem;
		transition: all var(--transition-fast);
	}

	.footer-links a:hover {
		color: var(--accent-light);
		padding-left: 4px;
	}

	.footer-cta p {
		font-size: 0.9rem;
		margin-bottom: 1.25rem;
		line-height: 1.5;
	}

	.footer-btn {
		display: inline-flex;
		align-items: center;
		padding: 0.75rem 1.5rem;
		background: var(--accent);
		color: white;
		font-size: 0.9rem;
		font-weight: 600;
		text-decoration: none;
		border-radius: var(--border-radius);
		transition: all var(--transition-fast);
	}

	.footer-btn:hover {
		background: var(--accent-light);
		transform: translateY(-2px);
	}

	.footer-bottom {
		max-width: 1100px;
		margin: 0 auto;
		padding: 1.5rem;
		border-top: 1px solid rgba(255, 255, 255, 0.08);
		text-align: center;
	}

	.footer-bottom p {
		font-size: 0.8rem;
		opacity: 0.5;
		margin: 0;
	}

	@media (max-width: 767px) {
		.footer-content {
			text-align: center;
		}

		.footer-logo {
			justify-content: center;
		}

		.brand-tagline {
			max-width: 100%;
		}

		.social-links {
			justify-content: center;
		}
	}
</style>
