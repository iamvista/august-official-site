---
interface Props {
  variant?: 'primary' | 'secondary' | 'banner';
  title?: string;
  description?: string;
  buttonText?: string;
}

const {
  variant = 'primary',
  title = "你的代謝年齡是幾歲？",
  description = "花 2 分鐘完成測驗，了解你的身體真實狀態",
  buttonText = "免費測驗"
} = Astro.props;
---

{variant === 'banner' ? (
  <section class="quiz-cta-banner">
    <div class="banner-bg-pattern"></div>
    <div class="banner-glow"></div>
    <div class="banner-content">
      <div class="banner-badge">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="14" height="14">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
        </svg>
        免費健康評估
      </div>
      <h2>{title}</h2>
      <p>{description}</p>
      <div class="cta-wrapper">
        <a href="/quiz" class="cta-btn primary">
          <span>{buttonText}</span>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="22" height="22">
            <path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/>
          </svg>
        </a>
        <p class="cta-note">無需註冊，立即開始</p>
      </div>
    </div>
  </section>
) : (
  <div class={`quiz-cta-inline ${variant}`}>
    <a href="/quiz" class={`cta-btn ${variant}`}>
      {buttonText}：{title}
    </a>
  </div>
)}

<style>
  /* Banner variant */
  .quiz-cta-banner {
    position: relative;
    background: linear-gradient(135deg, #047857 0%, #059669 35%, #0d9488 70%, #14b8a6 100%);
    padding: 6rem 1.5rem 7rem;
    text-align: center;
    overflow: hidden;
  }

  .banner-bg-pattern {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
      radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.08) 0%, transparent 40%),
      radial-gradient(circle at 80% 70%, rgba(255, 255, 255, 0.06) 0%, transparent 40%),
      url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.04'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    pointer-events: none;
  }

  .banner-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 60%);
    pointer-events: none;
  }

  .banner-content {
    position: relative;
    max-width: 680px;
    margin: 0 auto;
    z-index: 1;
  }

  .banner-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(8px);
    color: white;
    font-size: 0.75rem;
    font-weight: 700;
    padding: 0.6rem 1.25rem;
    border-radius: var(--border-radius-xl);
    margin-bottom: 2rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    border: 1px solid rgba(255, 255, 255, 0.15);
  }

  .banner-content h2 {
    color: white;
    font-size: 2.25rem;
    margin-bottom: 1.25rem;
    font-weight: 800;
    letter-spacing: -0.03em;
    line-height: 1.2;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
  }

  @media (min-width: 768px) {
    .banner-content h2 {
      font-size: 2.75rem;
    }
  }

  .banner-content > p {
    color: rgba(255, 255, 255, 0.92);
    font-size: 1.15rem;
    margin-bottom: 2.5rem;
    line-height: 1.7;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .quiz-cta-banner .cta-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.85rem;
    background: white;
    color: var(--accent-dark);
    padding: 1.15rem 2.5rem;
    font-size: 1.1rem;
    font-weight: 700;
    text-decoration: none;
    border-radius: var(--border-radius);
    transition: all var(--transition-fast);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    position: relative;
    overflow: hidden;
  }

  .quiz-cta-banner .cta-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(5, 150, 105, 0.1), transparent);
    transition: left 0.5s ease;
  }

  .quiz-cta-banner .cta-btn:hover::before {
    left: 100%;
  }

  .quiz-cta-banner .cta-btn:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow: 0 14px 40px rgba(0, 0, 0, 0.25);
  }

  .quiz-cta-banner .cta-btn svg {
    transition: transform var(--transition-fast);
  }

  .quiz-cta-banner .cta-btn:hover svg {
    transform: translateX(5px);
  }

  .cta-note {
    color: rgba(255, 255, 255, 0.75);
    font-size: 0.85rem;
    margin: 0;
    font-weight: 500;
  }

  @media (min-width: 768px) {
    .quiz-cta-banner {
      padding: 7rem 2rem 8rem;
    }
  }

  /* Inline variants */
  .quiz-cta-inline {
    display: inline-block;
  }

  .quiz-cta-inline .cta-btn {
    padding: 1rem 2rem;
    font-weight: 700;
    text-decoration: none;
    display: inline-block;
    border-radius: var(--border-radius);
    transition: all var(--transition-fast);
    font-size: 1rem;
  }

  .quiz-cta-inline .cta-btn.primary {
    background: var(--accent-gradient);
    color: white;
    border: none;
    box-shadow: 0 6px 20px rgba(5, 150, 105, 0.35);
  }

  .quiz-cta-inline .cta-btn.primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 28px rgba(5, 150, 105, 0.45);
  }

  .quiz-cta-inline .cta-btn.secondary {
    background: white;
    color: var(--accent);
    border: 2px solid rgba(5, 150, 105, 0.15);
  }

  .quiz-cta-inline .cta-btn.secondary:hover {
    background: var(--bg-mint);
    border-color: var(--accent);
    transform: translateY(-3px);
  }
</style>
