---
interface Props {
  headline?: string;
}

const { headline = "已協助 50+ 位學員改善代謝健康" } = Astro.props;

const stats = [
  { value: "8.5", unit: "kg", label: "平均減重", note: "90天內", icon: "scale" },
  { value: "85", unit: "%", label: "脂肪肝改善率", note: "3個月追蹤", icon: "heart" },
  { value: "98", unit: "%", label: "學員滿意度", note: "問卷調查", icon: "star" },
];
---

<section class="social-proof">
  <div class="social-proof-bg"></div>
  <div class="social-proof-inner">
    <div class="headline-wrapper">
      <span class="headline-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
        </svg>
      </span>
      <p class="headline">{headline}</p>
    </div>
    <div class="stats-grid">
      {stats.map((stat, index) => (
        <div class="stat-card" style={`--delay: ${index * 0.1}s`}>
          <div class="stat-glow"></div>
          <div class="stat-icon">
            {stat.icon === 'scale' && (
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="28" height="28">
                <path d="M12 3v1.5A5.5 5.5 0 0 0 6.5 10H5v4h1.5v1H5v4h14v-4h-1.5v-1H19v-4h-1.5A5.5 5.5 0 0 0 12 4.5V3Z"/>
              </svg>
            )}
            {stat.icon === 'heart' && (
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="28" height="28">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
              </svg>
            )}
            {stat.icon === 'star' && (
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="28" height="28">
                <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
              </svg>
            )}
          </div>
          <div class="stat-value">
            <span class="stat-number">{stat.value}</span>
            <span class="stat-unit">{stat.unit}</span>
          </div>
          <div class="stat-label">{stat.label}</div>
          <div class="stat-note">
            <span class="note-dot"></span>
            {stat.note}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .social-proof {
    background: linear-gradient(180deg, rgba(236, 253, 245, 0.8) 0%, var(--bg-cream) 100%);
    padding: 6rem 1.5rem 7rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .social-proof-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(ellipse 60% 40% at 10% 20%, rgba(5, 150, 105, 0.04) 0%, transparent 50%),
      radial-gradient(ellipse 50% 30% at 90% 80%, rgba(13, 148, 136, 0.03) 0%, transparent 50%);
    pointer-events: none;
  }

  .social-proof::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent 10%, rgba(5, 150, 105, 0.15) 50%, transparent 90%);
  }

  .social-proof-inner {
    max-width: 1100px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .headline-wrapper {
    display: inline-flex;
    align-items: center;
    gap: 0.85rem;
    margin-bottom: 3.5rem;
    padding: 0.75rem 1.75rem;
    background: white;
    border-radius: var(--border-radius-xl);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    border: 1px solid rgba(5, 150, 105, 0.08);
  }

  .headline-icon {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--bg-mint) 0%, #d1fae5 100%);
    border-radius: 50%;
    color: var(--accent);
  }

  .headline {
    font-size: 0.85rem;
    color: var(--accent-dark);
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-weight: 700;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .stat-card {
    padding: 2.75rem 2.25rem;
    background: white;
    border-radius: 24px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
    transition: all var(--transition-medium);
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 0.03);
  }

  .stat-glow {
    position: absolute;
    top: -60px;
    right: -60px;
    width: 150px;
    height: 150px;
    background: radial-gradient(circle, var(--bg-mint) 0%, transparent 70%);
    opacity: 0;
    transition: opacity var(--transition-medium);
    pointer-events: none;
  }

  .stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: var(--accent-gradient);
    opacity: 0;
    transition: opacity var(--transition-fast);
  }

  .stat-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 25px 50px -10px rgba(5, 150, 105, 0.18);
  }

  .stat-card:hover::before {
    opacity: 1;
  }

  .stat-card:hover .stat-glow {
    opacity: 1;
  }

  .stat-icon {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--bg-mint) 0%, rgba(209, 250, 229, 0.6) 100%);
    border-radius: 18px;
    color: var(--accent);
    margin: 0 auto 1.5rem;
    border: 1px solid rgba(5, 150, 105, 0.1);
    position: relative;
    z-index: 1;
  }

  .stat-value {
    font-size: 3.25rem;
    font-weight: 800;
    color: rgb(var(--black));
    line-height: 1;
    letter-spacing: -0.035em;
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 0.1em;
    position: relative;
    z-index: 1;
  }

  .stat-number {
    background: linear-gradient(135deg, rgb(var(--black)) 0%, rgb(var(--gray-dark)) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .stat-unit {
    font-size: 1.65rem;
    font-weight: 700;
    color: var(--accent);
  }

  .stat-label {
    font-size: 1.1rem;
    font-weight: 700;
    color: rgb(var(--black));
    margin-top: 1.15rem;
    letter-spacing: -0.015em;
    position: relative;
    z-index: 1;
  }

  .stat-note {
    font-size: 0.8rem;
    color: rgb(var(--gray));
    margin-top: 0.6rem;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
    z-index: 1;
  }

  .note-dot {
    width: 5px;
    height: 5px;
    background: var(--accent);
    border-radius: 50%;
    opacity: 0.5;
  }

  @media(min-width: 768px) {
    .social-proof {
      padding: 7rem 2rem 8rem;
    }

    .stats-grid {
      gap: 2.5rem;
    }
  }

  @media(min-width: 1024px) {
    .social-proof {
      padding: 8rem 3rem 9rem;
    }
  }
</style>
